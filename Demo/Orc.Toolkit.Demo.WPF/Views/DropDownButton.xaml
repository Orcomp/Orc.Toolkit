<UserControl x:Class="Orc.Toolkit.Demo.Views.DropDownButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:orctk="clr-namespace:Orc.Toolkit;assembly=Orc.Toolkit"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <orctk:DropDownButton Header="Header" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Width="200" Height="200" Background="#ececec" BorderBrush="#cecece" BorderThickness="1">
                <Border BorderThickness="1" BorderBrush="White">
                    <Grid>
                        <TextBox Width="100" Text="Content" VerticalAlignment="Center" />
                        <TextBox Width="100" Text="Content" VerticalAlignment="Bottom" />
                    </Grid>
                </Border>
            </Border>
        </orctk:DropDownButton>
        <orctk:Expander Style="{StaticResource ExpanderToLeft}" Header="Test" ExpandDirection="Left" Grid.Column="1">Popup placement update</orctk:Expander>
    </Grid>
</UserControl>
