<Window x:Class="Orc.Toolkit.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Orc.Toolkit.Demo.Views"
        Title="Orc.Toolkit Demo Application">
	<Grid>
		<TabControl>
			<TabItem Header="Tooltips">
				<local:Tooltips />
			</TabItem>
			<TabItem Header="Statusbar">
				<local:Statusbar />
			</TabItem>
			<TabItem Header="Printing">
				<local:Printing />
			</TabItem>
			<TabItem Header="ColorPicker">
				<local:ColorPicker />
			</TabItem>
            <TabItem Header="DropDownButton">
                <local:DropDownButton />
            </TabItem>
            <TabItem Header="ColorLegend">
                <local:ColorLegend />
            </TabItem>
            <TabItem Header="Searchable List">
                <local:SearchableList />
            </TabItem>
		</TabControl>
	</Grid>
</Window>